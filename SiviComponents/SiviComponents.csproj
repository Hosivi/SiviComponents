        </Content>
        <Content Update="FormBuilder\FormElement.razor">
            <CustomToolNamespace>SiviComponents.FormBuilder</CustomToolNamespace>
        </Content>
        <Content Update="Forms\ValidationComponent.razor">
            <CustomToolNamespace>SiviComponents.FormBuilder</CustomToolNamespace>
        </Content>
        <Content Update="Forms\Button.razor">
            <Generator>SiviComponents.Forms</Generator>
        </Content>
        <Content Update="Forms\SVInput.razor">
