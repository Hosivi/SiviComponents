        <Content Update="Grid\Row.razor">
            <CustomToolNamespace>SiviComponents.Grid</CustomToolNamespace>
        </Content>
        <Content Update="Menu\MenuBar.razor">
            <CustomToolNamespace>SiviComponents.Menu</CustomToolNamespace>
        </Content>
        <Content Update="SVDropDownSelect\SVDropDownItem.razor">
            <CustomToolNamespace>SiviComponents.SVDropDownSelect</CustomToolNamespace>
        </Content>
        <Content Update="SVDropDownSelect\SVDropDownSelect.razor">
            <CustomToolNamespace>SiviComponents.SVDropDownSelect</CustomToolNamespace>
        </Content>
        <Content Update="SVStepper\SVStepper.razor">
            <CustomToolNamespace>SiviComponents.SVStepper</CustomToolNamespace>
        </Content>
        <Content Update="Templates\SVLoginForm.razor">
            <CustomToolNamespace>SiviComponents.Templates</CustomToolNamespace>
        </Content>
    </ItemGroup>
    <ItemGroup>
        <Compile Update="Base\SiviDomComponentBase.cs">
            <CustomToolNamespace>namespace SiviComponents.Base</CustomToolNamespace>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <None Include="wwwroot\js\SVDropDownList.js" />
    </ItemGroup>

    <ItemGroup>
        <UpToDateCheckInput Remove="DataGrid\SVTool.razor" />
    </ItemGroup>

    <ItemGroup>
