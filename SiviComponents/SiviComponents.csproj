    </ItemGroup>

    <ItemGroup>
        <UpToDateCheckInput Remove="Grid\Row.razor" />
    </ItemGroup>


    <ItemGroup>
        <Content Update="Base\SVSpinner.razor">
            <CustomToolNamespace>SiviComponents.Base</CustomToolNamespace>
        </Content>
        <Content Update="DateComponents\SVDatePickerComponent.razor">
            <CustomToolNamespace>SiviComponents.DateComponents</CustomToolNamespace>
        </Content>
        <Content Update="FormBuilder\FormBuilder.razor">
