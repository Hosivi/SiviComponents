<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <Title>SiviComponents</Title>
        <Description>Componentes Blazor</Description>
        <Company>SIVI</Company>
        <PackageId>SiviComponents</PackageId>
<!--        <Version>1.0.1</Version>-->
        <RepositoryUrl>https://github.com/Hosivi/SiviComponents.git</RepositoryUrl>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Blazored.SessionStorage" Version="2.2.0" />
        <PackageReference Include="FluentValidation" Version="11.5.1" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.3" />
        <PackageReference Include="SiviUtils" Version="1.1.0" />
        <PackageReference Include="SVSharedKernel" Version="0.0.1" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Modal\" />
        <Folder Include="CustomEvents\" />
